{
  "name": "math-helper-gui",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"node node_modules/vite/bin/vite.js\" \"electron .\"",
    "build": "node node_modules/vite/bin/vite.js build",
    "build:win": "npm run build && node node_modules/electron-builder/out/cli/cli.js --win --x64 --dir",
    "pack:win": "npm run build && node node_modules/electron-builder/out/cli/cli.js --win --x64"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^3.4.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "typescript": "^5.6.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lucide-react": "^0.460.0"
  },
  "build": {
    "appId": "com.mathhelper.app",
    "productName": "MathHelper",
    "win": {
      "target": ["portable"]
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ]
  }
}
